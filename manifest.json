{
  "manifest_version": 3,
  "name": "YouTube Markup",
  "version": "1.0.1",
  "permissions": ["storage","tabs"],
  "host_permissions": ["https://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "YouTube Markup",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["./contentScript.js"],
      "css": ["./css/all.css"],
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "bookmark.svg"
      ],
      "matches": ["https://*.youtube.com/*"]
    }
  ]
}
